<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/lv_detail_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_toEndOf="@id/lv_detail_img"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:paddingStart="3dp"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:maxLines="2"
            android:textColor="@color/colorText"
            android:id="@+id/lv_detail_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:layout_below="@id/lv_detail_content"
            android:id="@+id/lv_detail_watch"
            android:layout_width="40dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_below="@id/lv_detail_content"
            android:layout_toEndOf="@id/lv_detail_watch"
            android:id="@+id/lv_detail_number"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="55"
            android:textColor="@color/colorText"
            android:gravity="center"/>
        <TextView
            android:id="@+id/lv_detail_date"
            android:layout_below="@id/lv_detail_content"
            android:layout_toEndOf="@id/lv_detail_number"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="2017-5-5"
            android:textColor="@color/colorText"
            android:gravity="right"
            android:paddingEnd="20dp"/>
    </RelativeLayout>


</RelativeLayout>